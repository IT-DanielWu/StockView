<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MiniFenShiView">
        <!-- 涨颜色-->
        <attr name="upColor" format="color" />
        <!-- 跌颜色-->
        <attr name="downColor" format="color" />
        <!-- 不涨不跌颜色-->
        <attr name="equalColor" format="color" />
        <!-- 渐变底部颜色-->
        <attr name="gradientBottomColor" format="color" />

        <!-- 实线宽-->
        <attr name="strokeWidth" format="dimension" />
        <!-- 价格区域透明度-->
        <attr name="areaAlpha" format="integer" />
        <!-- 虚线宽-->
        <attr name="dottedLineWidth" format="dimension" />
        <!-- 虚线间距-->
        <attr name="dottedLineSpace" format="dimension" />
        <!-- 始终显示虚线-->
        <attr name="alwaysShowDottedLine" format="boolean" />
    </declare-styleable>
</resources>